@using Microsoft.AspNetCore.Identity
@using  FangZhouShuMa.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right login">
            <li>
                <span class="shopping-cart">
                    <img src="~/images/cart.jpg" /><a href="/Quote/CartList?hid=0" target="_blank" class="cart613" style="color:#e5630b;">购物车</a>
                </span>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">你好 @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">退出</button>
            </li>
        </ul>
    </form>
}
else
{

    <section>
        <ul class="nav navbar-nav navbar-right login">
            <li class="shopping-cart">
                <span>
                    @*<img src="~/images/cart.jpg" /><a href="/Quote/CartList?hid=0" target="_blank" class="cart613" style="color:#e5630b;">购物车</a>*@

                </span>
            </li>
            <li><a asp-area="" asp-controller="Account" asp-action="Register">注册</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">登录</a></li>
        </ul>
    </section>

    <section>
        @await Component.InvokeAsync("Basket", new { userName = "" })
    </section>
}
